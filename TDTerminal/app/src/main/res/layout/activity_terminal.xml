<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_terminal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rrm.tdterminal.TerminalActivity">

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceLabel"
        android:layout_alignBaseline="@+id/priceEdit"
        android:layout_alignBottom="@+id/priceEdit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="45dp"
        android:id="@+id/priceEdit"
        android:hint="Enter Price"
        android:layout_below="@+id/connectTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Nothing Yet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceEdit"
        android:layout_alignStart="@+id/priceLabel"
        android:layout_marginTop="64dp"
        android:id="@+id/textTagContent" />
</RelativeLayout>
